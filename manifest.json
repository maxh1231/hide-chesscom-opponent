{
    "manifest_version": 2,
    "name": "chess-name-hider",
    "version": "1.0",
    "description": "",
    "icons": {
        "48": "assets/images/block-48.png",
        "96": "assets/images/block-96.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "webNavigation",
        "scripting",
        "https://www.chess.com/game/*"
    ],
    "browser_action": {
        "default_icon": "assets/images/block-32.png",
        "default_title": "test title",
        "default_popup": "popup/index.html"
    },
    "options_ui": {
        "page": "options/index.html"
    },
    "background": {
        "scripts": [
            "background/default-preferences.js",
            "background/events.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["https://www.chess.com/*"],
            "js": ["hide-opponent.js"]
        }
    ]
}
