{
    "manifest_version": 2,
    "name": "Hide Chess.com Opponent",
    "version": "1.0.5",
    "description": "Removes all UI components related to your opponent on Chess.com. Includes user settings that are easily configurable in real-time without navigating away from your chess match to prevent disruption in user-experience.",
    "icons": {
        "48": "assets/logo/logo-48.png",
        "64": "assets/logo/logo-64.png",
        "96": "assets/logo/logo-96.png",
        "128": "assets/logo/logo-128.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "webNavigation",
        "scripting",
        "https://www.chess.com/game/*"
    ],
    "browser_action": {
        "default_icon": {
            "16": "assets/logo/logo-16.png",
            "32": "assets/logo/logo-32.png"
        },
        "default_title": "test title",
        "default_popup": "user/popup.html",
        "browser_style": true
    },
    "options_ui": {
        "page": "user/options.html",
        "browser_style": true
    },
    "background": {
        "scripts": ["background/storage.js", "background/listeners.js"],
        "persistent": false
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "hidechesscomopponent@maxdev.dev",
            "strict_min_version": "102.0"
        }
    }
}
