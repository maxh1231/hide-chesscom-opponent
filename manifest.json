{
    "manifest_version": 2,
    "name": "chess-name-hider",
    "version": "1.0",
    "description": "",
    "icons": {
        "48": "assets/block-48.png",
        "96": "assets/block-96.png"
    },
    "permissions": ["activeTab", "storage", "webNavigation"],
    "browser_action": {
        "default_icon": "assets/block-32.png",
        "default_title": "test title",
        "default_popup": "popup/index.html"
    },
    "options_ui": {
        "page": "options/index.html"
    },
    "background": {
        "scripts": ["background/init-storage.js", "background/trigger.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["https://www.chess.com/*"],
            "js": ["hide-opponent.js"]
        }
    ]
}
